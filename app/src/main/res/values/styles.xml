<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Application base theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Body1.Regular" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Body2.Medium" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Subhead.Medium" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Headline.Regular" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Subhead.Regular" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Fitness.TextAppearance.AppCompat.Title.Regular" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>
